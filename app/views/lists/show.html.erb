<br>
<div class="well">
  <h1><%= @list.name %></h1>
  <p class="lead"><%= @list.description %></p>
  <div>
    <% if policy(@list).edit? %>
      <%= link_to "Edit Wishlist", edit_list_path, class: 'btn btn-info btn-sm' %>
    <% end %>
    <% if policy(@list).destroy? %>
      <%= link_to "Delete Wishlist", @list, method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this wishlist?' } %>
    <% end %>
    <% if policy(Wish.new).create? %>
      <%= link_to "New Wish", new_list_wish_path(@list), class: 'btn btn-success btn-sm' %>
    <% end %>
  </div>
  <br>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">
            <h4 class="media-heading">My Wishes for <%= @list.name %></h4>
          </th>
        </tr>
      </thead>
      <tbody>

        <% if @list.wishes.each do |wish| %>
          <tr>
            <td>
              <div class="thumbnail">
                <% embedly = display(wish.url) %>
                <%= link_to embedly[:url], :target => '_blank' do %>
                    <%= image_tag embedly[:thumbnail_url] %>
                <% end %>
              </div>
            </td>
            <td>
              <h4 class="media-heading">
                <%= link_to wish.title, list_wish_path(@list, wish) %>
              </h4>
              <small>
                submitted <%= time_ago_in_words(wish.created_at) %> ago by <%= wish.user.username %> <br>
                <!-- <%= wish.comments.count %> Comments -->
              </small>
            </td>
          </tr>
        <% end.empty? %>
          <tr>
            <td colspan="2">
              <p>No Wishes yet!</p>
            </td>
          </tr>
        <% end %>

      </tbody>
    </table>
  </div>
</div>
