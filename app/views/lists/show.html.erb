<h1><%= @list.name %></h1>

<%= link_to "Edit Wishlist", edit_list_path, class: 'btn btn-success' %>
<%= link_to "Delete Wishlist", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this wishlist?' } %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @list.description %></p>
<!-- #10 -->
    <% @list.wishes.each do |wish| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wish.title, list_wish_path(@list, wish) %>
          </h4>

          <small>
            submitted <%= time_ago_in_words(wish.created_at) %> ago by <%= wish.user.username %> <br>
            <%= wish.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Wish", new_list_wish_path(@list), class: 'btn btn-success' %>
  </div>
</div>
