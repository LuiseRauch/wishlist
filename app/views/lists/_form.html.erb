<%= form_for @list do |f| %>
  <% if list.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(list.errors.count, "error") %>.</h4>
      <ul>
        <% list.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_group_tag(list.errors[:name]) do %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter Wishlist name" %>
  <% end %>
  <%= form_group_tag(list.errors[:description]) do %>
    <%= f.label :description %>
    <%= f.text_area :description, rows: 2, class: 'form-control', placeholder: "Enter Wishlist description" %>
  <% end %>
  <%= form_group_tag(list.errors[:public]) do %>
    <%= f.label :public, class: 'checkbox-inline' do %>
      <%= f.check_box :public %> Public list
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
