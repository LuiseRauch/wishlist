<div class="row">
  <div class="col-md-12">
    <table class="table table-bordered table-responsive">

      <thead>
        <caption>
          <h2><%= @wish.title %></h2>
          <small>
            submitted <%= time_ago_in_words(@wish.created_at) %> ago by <%= @wish.user.username %>
          </small>
          <div class="pull-right">
            <%= link_to "Edit", edit_list_wish_path(@wish.list, @wish), class: 'btn btn-info btn-sm' %>
            <%= link_to "Delete Wish", [@wish.list, @wish], method: :delete, class: 'btn btn-danger btn-sm', data: { confirm: 'Are you sure you want to delete this wish?' } %>
            <%= link_to @wish.list.name, request.referer, class: 'btn btn-success btn-sm'%>
          </div>
        </caption>
        <tr>
          <th>
            link
          </th>
          <th>
            description
          </th>
          <th>
            price
          </th>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>
            <div class="thumbnail">
              <% embedly = display(@wish.url) %>
              <%= link_to embedly[:url], :target => '_blank' do %>
                  <%= image_tag embedly[:thumbnail_url] %>
              <% end %>
            </div>
          </td>
          <td>
            <p><%= @wish.body %></p>
          </td>
          <td>
            <p><%= @wish.price %></p>
          </td>
        </tr>
      </tbody>

     </table>
  </div>
</div>
